<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="match_parent"
    tools:context=".taskpad.ui.TasksDetailFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:paddingBottom="400dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/bottom_control_margin"
        android:layout_marginBottom="@dimen/bottom_control_margin"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:id="@+id/tasks_action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="6dp">

            <ImageButton
                android:id="@+id/add_task_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/card_margin"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="add new task to list"
                android:src="@drawable/add_task_24" />

            <ImageButton
                android:id="@+id/remove_completed_task_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/card_margin"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="remove completed tasks"
                android:src="@drawable/remove_circle_outline_30" />

            <ImageButton
                android:id="@+id/clear_current_task_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/card_margin"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="clear current task"
                android:src="@drawable/clear_box_30" />

            <ImageButton
                android:id="@+id/delete_current_task_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/card_margin"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="delete current task"
                android:src="@drawable/delete_outline_30" />

        </TableRow>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>